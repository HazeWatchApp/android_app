<?xml version="1.0" encoding="utf-8"?>
<uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:id="@+id/ptr_layout"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <GridView
        android:paddingTop="@dimen/paddingTop"
        android:paddingBottom="@dimen/paddingBottom"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:id="@+id/gridView_api"
        android:layout_width="1100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="fill_parent"
        android:horizontalSpacing="4dp"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:numColumns="@integer/num_cols"
        android:verticalSpacing="8dp" />

    <include
        android:id="@+id/empty_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/empty"
        android:visibility="gone" />

</uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>